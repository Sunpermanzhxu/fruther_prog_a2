<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      alignment="CENTER"
      fx:controller="com.dah.controller.AddAPostController">

    <Label text="Add a Post" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER">
        <Label text="ID: " />
        <TextField fx:id="idField" promptText="Positive integer" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Content: " />
        <TextArea fx:id="contentTextArea" prefWidth="400" prefHeight="200" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Author: " />
        <TextField fx:id="AuthorField" promptText="" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Likes: " />
        <TextField fx:id="likesField" promptText="Positive integer" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Shares: " />
        <TextField fx:id="sharesField" promptText="Positive integer" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Date: " />
        <TextField fx:id="dayField" promptText="date" />
        <Label text="/" />
        <TextField fx:id="monField" promptText="month" />
        <Label text="/" />
        <TextField fx:id="yerField" promptText="year" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Time: " />
        <TextField fx:id="horField" promptText="hour" />
        <Label text=":" />
        <TextField fx:id="minField" promptText="minutes" />
    </HBox>

    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="cancleEditButton" text="Cancel" onAction="#handleCancel" />
        <Button fx:id="confirmEditButton" text="Confirm" onAction="#handleConfirm" />
    </HBox>
    
    <Label fx:id="addErrText" text="" />

</VBox>
